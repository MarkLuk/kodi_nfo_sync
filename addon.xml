<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="service.library.nfosync" name="NFO Sync" version="0.1.1" provider-name="Mark Luko">
	<requires>
		<import addon="xbmc.python" version="3.0.0"/>
	</requires>
    <extension point="xbmc.python.script" library="script.py">
        <provides>executable</provides>
    </extension>
	<extension point="xbmc.service" library="service.py"/>
	<extension point="xbmc.addon.metadata">
		<summary lang="en_GB">Synchronizes library data to/from NFO files.</summary>
		<description lang="en_GB">Automatically exports library to NFOs or imports/refreshes library from NFOs on a configurable schedule.</description>
		<platform>all</platform>
        <assets>
            <icon>icon.png</icon>
        </assets>
	</extension>
</addon>
